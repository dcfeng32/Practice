.navbar-brand{
	padding-left: 40px;
	color:#333 !important;
	font-size: 22px;
	font-weight: bolder;
	position: relative;
}
.navbar-brand:hover{
	color:#333;
}

.navbar-brand > i{
	color:#337ab7;
	font-size: 35px;
	position: absolute;
	left: 0;
	top: 25px;

}

#qh_navbar > ul > .active > a{
	background: none;
	font-size: 15px;
	font-weight: bolder;
}

.input-group{
	width: 190px;
}

.input-group > input,
.input-group > input:focus{
	border: 1px #ccc solid;
    box-shadow: none;
	outline:none;
	border-right-color: #2e6da4;
}

.input-group > input{
	border: 1px #ccc solid;
	border-right-color: #2e6da4;
}

.input-group > span > button{
	height: 34px;
}

.btn:focus,
.btn.active:focus,
.btn:active:focus,
.btn.focus,
.btn:active.focus,
.btn.active.focus{
	outline: none;
	box-shadow: none;
	background: #337ab7;
	border-color: #2e6da4;
}

.btn:hover{
	background: #337ab7;
	border-color: #2e6da4;
}

#loginreg > li > a > span{
	color:#337ab7;
}

/* 轮播的样式 */
#carousel-qhkt{
	margin-top: -20px;
}

.carousel-inner > div.item{
	
	background-position: center center !important;
	background-size: cover !important;
}


@media(min-width: 769px){
	.carousel-inner > div{
		height: 410px !important;
	}
}

@media(max-width: 768px){
	.carousel-inner > div{
		height: auto !important;
	}
}


/* 课程列表样式 */

.page-header{
	border-bottom: 4px #ddd solid;
}

#courseList > .page-header > h3{
	position: relative;
}

#courseList > .page-header > h3 > a{
	color:#666;
	font-weight: 100;
	font-size: 16px;
	position: absolute;
	right: 0px;
	line-height: 26.4px;
}

#courseList > .page-header > h3 > a:hover{
	text-decoration: none;
}

.thumbnail{
	border: 1px #fff solid;
	padding: 10px;
	border-radius: 0;
}

.thumbnail:hover{
	box-shadow: .5px .5px 1px #ddd;
	border: 1px #ccc solid;
	outline: 1px #ddd solid;
}

.thumbnail > .caption > h3{
	margin-top: 5px;
	font-size: 16px;
}

.thumbnail > .caption > h3 > a{
	color: #333;
}

.thumbnail > .caption > h3.course_price{
	position: relative;
	margin-top:20px;
	color:red;

}

.thumbnail > .caption > h3 > .course_group{
	position: absolute;
	right: 0;
}


/* 脚部样式 */
.footer{
	margin-top:50px;
	background: #666;
	padding: 30px 0 30px 0;
	color:#999;
}
.footer > div.footericon{
	text-align: center;
}
.footer > div.footericon > span {
	font-size: 60px;
}
.footer > .cr{
	text-align: center;

}
.footer > .cr > a{
	color:#999;
}



